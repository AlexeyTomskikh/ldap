    <script type="text/javascript">
        function OnSuccess(data) {
            var results = $('#results'); // получаем нужный элемент
            results.empty(); //очищаем элемент
            results.append('<li>' + data + '</li>'); // добавляем данные в список

        }

        function AddEvent() {
            alert('usгы');

            var formData = {
                NameEvent: $('#NameEvent').val(),
                StartEvent: $('#StartEvent').val(),
                EndEvent: $('#EndEvent').val()
               
            }
                     
            $.ajax({
                type: 'POST',
                url: "@Url.Action("AddNewEvent" , "Logic")",
                contentType: 'application/json; charset=utf-8',
                data: JSON.stringify(formData),
                dataType: 'json',
                processData: false,
                success: function (responce) {
                    alert('Мероприятие успешно добавлено!');
                },
                error: function () {
                    alert('Время уже занято!');
                }

            });
        }
    </script>

    <div>
        @using (Ajax.BeginForm("AddNewEvent", "Logic", new AjaxOptions
        {

            InsertionMode = InsertionMode.InsertAfter,
            OnSuccess = "OnSuccess",


        }))
        {
            <input type="text" name="NameEvent" id="NameEvent" value="" />
            <input name="StartEvent" id="StartEvent" type="text">
            <input name="EndEvent" id="EndEvent" type="text">
            <input type="button" onclick="AddEvent()" value="Добавить" />
        }


        <div id="results"></div>
    </div>
